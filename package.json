{
  "name": "tokyo2025",
  "version": "1.0.0",
  "description": "AI-powered Tokyo 2025 Travel Companion on Cloudflare Workers",
  "private": true,
  "scripts": {
    "dev": "wrangler dev",
    "build": "npx @cloudflare/next-on-pages",
    "typecheck": "tsc --noEmit",
    "start": "next start",
    "deploy": "npm run build && npx wrangler pages deploy .vercel/output/static --project-name tokyo2025",
    "deploy:manual": "(npm run typecheck || true) && npx @cloudflare/next-on-pages && npm run db:migrate && wrangler deploy",
    "deploy:local": "npx @cloudflare/next-on-pages && wrangler deploy",
    "preview": "npx @cloudflare/next-on-pages && wrangler dev",
    "db:create": "wrangler d1 create tokyo2025",
    "db:migrate": "wrangler d1 migrations apply DB --remote",
    "db:migrate:local": "wrangler d1 migrations apply DB --local",
    "db:query": "wrangler d1 execute DB --remote --command",
    "db:query:local": "wrangler d1 execute DB --local --command",
    "kv:create": "wrangler kv:namespace create MEMORY",
    "cf:login": "wrangler login",
    "cf:init": "npm run db:create && npm run kv:create",
    "secret:set": "wrangler secret put",
    "secret:list": "wrangler secret list",
    "seed:setup": "echo 'Run: npm run secret:set GOOGLE_PLACES_API_KEY' && echo 'Then enter your API key when prompted'",
    "seed:status": "curl http://localhost:8787/api/seed",
    "seed:ginza": "node src/scripts/seed-cli.js ginza",
    "seed:osaka": "node src/scripts/seed-cli.js osaka",
    "seed:all": "node src/scripts/seed-cli.js all"
  },
  "dependencies": {
    "next": "^15.0.0",
    "@cloudflare/next-on-pages": "^1.13.0",
    "@cloudflare/workers-types": "^4.20240512.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "ai": "^3.1.30",
    "@ai-sdk/openai": "^0.0.42",
    "@ai-sdk/google": "^0.0.31",
    "@ai-sdk/react": "^0.0.35",
    "nanoid": "^5.0.4",
    "date-fns": "^3.0.6",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.12.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "typescript": "^5.4.0",
    "wrangler": "^3.57.0",
    "vercel": "^34.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
