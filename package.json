{
  "name": "tokyo2025",
  "version": "1.0.0",
  "description": "AI-powered Tokyo 2025 Travel Companion on Cloudflare Workers",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "build": "next build",
    "pages:build": "npx @cloudflare/next-on-pages",
    "pages:deploy": "npx wrangler pages deploy .vercel/output/static --project-name tokyo2025",
    "db:migrate": "wrangler d1 migrations apply DB --remote",
    "deploy": "npm run pages:build && npm run pages:deploy && npm run db:migrate"
  },
  "dependencies": {
    "next": "^15.0.0",
    "@cloudflare/next-on-pages": "^1.13.0",
    "@cloudflare/workers-types": "^4.20240512.0",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "ai": "^3.1.30",
    "@ai-sdk/openai": "^0.0.42",
    "@ai-sdk/google": "^0.0.31",
    "@ai-sdk/react": "^0.0.35",
    "nanoid": "^5.0.4",
    "date-fns": "^3.0.6",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.12.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "typescript": "^5.4.0",
    "wrangler": "^3.57.0",
    "vercel": "^34.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
